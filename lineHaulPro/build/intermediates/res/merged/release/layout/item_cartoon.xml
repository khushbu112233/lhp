<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/cartoon_txtTitle"
            style="@style/multiscaninner_textview_style"
            android:gravity="left"
            android:text="@string/textview_multi_scan_inner_cartoon1" />

        <Button
            android:id="@+id/cartoon_btnScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/table_text_padding"
            android:background="@drawable/btn_scan"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Scan"
            android:textColor="#FFFFFF" />
    </FrameLayout>

    <EditText
        android:id="@+id/cartoon_editCartoon1"
        style="@style/multiscaninner_edittext_style"
        android:layout_marginLeft="@dimen/table_text_padding"
        android:layout_marginRight="@dimen/table_text_padding"
        android:layout_marginTop="5dp" />

</LinearLayout>